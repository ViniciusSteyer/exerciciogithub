<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20sp"
    android:paddingTop="20sp"
    android:paddingRight="20sp"
    android:paddingBottom="20sp"
    tools:context=".ActivityQ3">

    <TextView
        android:id="@+id/txtPontosQ3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="10"
        android:gravity="center_horizontal"
        android:text="Pontuação atual: 0"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="40"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/bandido" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="30"
        android:gravity="center"
        android:text="Chapolin! Vamos avisar ao cherife que capturamos um bandido perigoso! Mas, peraí. Qual é o nome deste bandido mesmo?"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnOpcao1Q3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="10"
        android:text="Racha Cuca"
        android:textAllCaps="false"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnOpcao2Q3"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="10"
        android:text="Tripa Seca"
        android:textAllCaps="false"
        android:textSize="18sp" />

</androidx.appcompat.widget.LinearLayoutCompat>